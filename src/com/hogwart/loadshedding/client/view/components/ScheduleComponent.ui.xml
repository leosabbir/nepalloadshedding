<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="res" type="com.hogwart.loadshedding.client.resources.LoadsheddingResources" />
	
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	
	<g:AbsolutePanel styleName="{res.loadsheddingCss.scheduleContainer}">
		<g:InlineLabel ui:field="dayField" styleName="{res.loadsheddingCss.dayField}">SUN</g:InlineLabel>
		<g:InlineLabel ui:field="remainingTimeField" styleName="{res.loadsheddingCss.glowStatus}">Its lighting</g:InlineLabel>
		<g:FlowPanel ui:field="timeField" styleName="{res.loadsheddingCss.timeContainer}">
		</g:FlowPanel>
		
		
	</g:AbsolutePanel>
</ui:UiBinder> 